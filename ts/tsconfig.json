{
  "include": ["src"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./out",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  }
}
